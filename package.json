{
  "name": "@mlightcad/workspace",
  "version": "1.0.0",
  "description": "AutoCAD MText renderer based on Three.js",
  "license": "MIT",
  "author": "MLight Lee <mlight.lee@outlook.com>",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/mlightcad/mtext-renderer"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "clean": "nx run-many -t clean",
    "dev": "nx run @mlightcad/mtext-renderer-example:dev",
    "format": "prettier --config ./.prettierrc.js --write packages/**/*.{ts,json}",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint:fix",
    "preview": "nx run @mlightcad/mtext-renderer-example:preview",
    "publish-renderer": "pnpm -r publish --filter mtext-renderer --no-git-checks"
  },
  "engines": {
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@intlify/eslint-plugin-vue-i18n": "^3.0.0",
    "@nx/js": "19.3.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.9",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.9.0",
    "lint-staged": "^15.2.7",
    "nx": "19.3.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.4.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "prettier --config ./.prettierrc.js --write",
      "eslint --config ./.eslintrc.js --fix --quiet"
    ],
    "*.md": [
      "prettier --config ./.prettierrc.js --write"
    ]
  }
}
